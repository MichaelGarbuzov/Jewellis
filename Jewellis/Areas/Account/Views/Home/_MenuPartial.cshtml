@*
    This partial view represents the menu in the side of each account-home page.
*@

@using Jewellis.Areas.Account.Controllers

@model string

<h3 class="block-title">Name Here</h3>
<aside class="form-container bg-white p-0 mb-5">
    <menu>
        <ul class="side-menu">
            <li @(Model.Equals(nameof(HomeController.Orders)) ? "class=selected" : "")>
                <a asp-area="Account" asp-controller="Home" asp-action="Orders"><span class="icon icon-stack1" aria-hidden="true"></span>Orders</a>
            </li>
            <li @(Model.Equals(nameof(HomeController.Wishlist)) ? "class=selected" : "")>
                <a asp-area="Account" asp-controller="Home" asp-action="Wishlist"><span class="icon icon-heart6" aria-hidden="true"></span>Wishlist</a>
            </li>
            <li @(Model.Equals(nameof(HomeController.Profile)) ? "class=selected" : "")>
                <a asp-area="Account" asp-controller="Home" asp-action="Profile"><span class="icon icon-vcard" aria-hidden="true"></span>Profile</a>
            </li>
            <li @(Model.Equals(nameof(HomeController.Address)) ? "class=selected" : "")>
                <a asp-area="Account" asp-controller="Home" asp-action="Address"><span class="icon icon-location" aria-hidden="true"></span>Address</a>
            </li>
            <li>
                <a asp-area="Account" asp-controller="Authenticate" asp-action="Logout"><span class="icon icon-exit" aria-hidden="true"></span>Log out</a>
            </li>
        </ul>
    </menu>
</aside>
