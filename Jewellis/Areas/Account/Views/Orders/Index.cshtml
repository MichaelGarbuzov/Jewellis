@{
    ViewData["Title"] = "Orders";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="maxw-2xl m-auto py-5-desktop">
            <h1 class="title-1 font-weight-bold mb-5">Your Account</h1>
            <div class="row">
                <div class="col-xl-3 col-lg-6 col-md-7 col-sm-8 pr-xl-5">
                    <partial name="~/Areas/Account/Views/Shared/_MenuPartial.cshtml" model="@("Orders")" />
                </div>
                <div class="col-xl-9 mb-5">
                    <h3 class="block-title">Orders</h3>
                    <div class="form-container bg-white txt-md">
                        <div class="table-header text-center d-none d-md-block">
                            <div class="row">
                                <div class="col-md-2">Order</div>
                                <div class="col-md-2">Date</div>
                                <div class="col-md-2">Total</div>
                                <div class="col-md-3">Status</div>
                                <div class="col-md-3"></div>
                            </div>
                        </div>
                        <div class="table-body">
                            <div class="table-row">
                                <div class="d-flex align-items-center text-left text-md-center row">
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Order</div>
                                            <div class="text-right text-md-center">#1234</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Date</div>
                                            <div class="text-right text-md-center">@DateTime.Now.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Total</div>
                                            <div class="text-right text-md-center">$130.00</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Status</div>
                                            <div class="text-right text-md-center tag tag-warning">Payment Processing</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-right text-md-center my-3">
                                            <a asp-area="Account" asp-controller="Orders" asp-action="Details" asp-route-id="1" class="btn outline-primary">View</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="d-flex align-items-center text-left text-md-center row">
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Order</div>
                                            <div class="text-right text-md-center">#131</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Date</div>
                                            <div class="text-right text-md-center">@DateTime.Now.AddMonths(2).ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Total</div>
                                            <div class="text-right text-md-center">$1450.00</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Status</div>
                                            <div class="text-right text-md-center tag tag-info">Shipping</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-right text-md-center my-3">
                                            <a asp-area="Account" asp-controller="Orders" asp-action="Details" asp-route-id="2" class="btn outline-primary">View</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="d-flex align-items-center text-left text-md-center row">
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Order</div>
                                            <div class="text-right text-md-center">#45</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Date</div>
                                            <div class="text-right text-md-center">@DateTime.Now.AddMonths(4).ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Total</div>
                                            <div class="text-right text-md-center">$200.00</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex justify-content-md-center justify-content-between my-2">
                                            <div class="d-md-none txt-secondary">Status</div>
                                            <div class="text-right text-md-center tag tag-success">Received</div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="text-right text-md-center my-3">
                                            <a asp-area="Account" asp-controller="Orders" asp-action="Details" asp-route-id="3" class="btn outline-primary">View</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
