@model Jewellis.Areas.Account.ViewModels.Profile.AddressVM

@{
    ViewData["Title"] = "Account Address";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="maxw-2xl m-auto py-5-desktop">
            <h1 class="title-1 font-weight-bold mb-5">Your Account</h1>
            <div class="row">
                <div class="col-xl-3 col-lg-6 col-md-7 col-sm-8 pr-xl-5">
                    <partial name="~/Areas/Account/Views/Shared/_MenuPartial.cshtml" model="@("Address")" />
                </div>
                <div class="col-xl-9 mb-5">
                    <h3 class="block-title">Address</h3>
                    <div class="form-container bg-white maxw-md m-0">
                        <form id="address-edit" asp-area="Account" asp-controller="Profile" asp-action="EditAddress" method="post">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="single-form-item">
                                        <label asp-for="Street"></label>
                                        <input asp-for="Street" class="i-txt" />
                                        <span asp-validation-for="Street" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="single-form-item">
                                        <label asp-for="PostalCode"></label>
                                        <input asp-for="PostalCode" class="i-txt" />
                                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="single-form-item">
                                <label asp-for="City"></label>
                                <input asp-for="City" class="i-txt" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="single-form-item">
                                <label asp-for="Country"></label>
                                <input asp-for="Country" class="i-txt" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                        </form>
                        <div class="d-flex justify-content-end mt-2">
                            @if (Model.Street != null)
                            {
                                <form asp-area="Account" asp-controller="Profile" asp-action="DeleteAddress" method="post">
                                    <button type="submit" class="btn outline-primary px-5" data-submit-loader>Remove</button>
                                </form>
                            }
                            <button type="button" class="btn btn-primary px-5 ml-4" data-remote-submit="#address-edit" data-submit-loader="#address-edit">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (TempData["SuccessTitle"] != null)
{
    <div id="success-modal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content modal-shadow">
                <div class="modal-header">
                    <h2 class="modal-title"><span class="icon icon-checkmark2 icon-top-adjust mr-3" aria-hidden="true"></span>@TempData["SuccessTitle"]</h2>
                </div>
                <div class="modal-body">
                    <p class="p-2 m-0">@TempData["SuccessBody"]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary px-5" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @if (TempData["SuccessTitle"] != null)
    {
        <script>
            $(function () {
                $('#success-modal').modal('show');
            });
        </script>
    }
}
