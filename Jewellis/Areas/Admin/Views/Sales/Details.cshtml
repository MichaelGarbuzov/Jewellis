@model Jewellis.Models.Sale

@{
    ViewData["Title"] = $"Sale #{Model.Id} Details";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="maxw-2xl m-auto">
            <ul class="breadcrumb p-0 mb-5">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="primary-link"><u>Admin</u></a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Sales" asp-action="Index" class="primary-link"><u>Sales</u></a></li>
                <li class="breadcrumb-item">Sale #@Model.Id</li>
            </ul>
            <div class="d-flex flex-wrap justify-content-between align-items-center">
                <h1 class="title-1 font-weight-bold mb-5">Sale #@Model.Id</h1>
                <div class="mb-4">
                    <a asp-area="Admin" asp-controller="Sales" asp-action="Edit" asp-route-id="@Model.Id" class="btn title-1-btn outline-warning px-sm-5 mb-4 ml-3">Edit</a>
                    <a asp-area="Admin" asp-controller="Sales" asp-action="Delete" asp-route-id="@Model.Id" class="btn title-1-btn outline-danger px-sm-5 mb-4 ml-3">Delete</a>
                </div>
            </div>
            <div class="form-container bg-white mb-5">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="single-form-item">
                            <label asp-for="Name"></label>
                            <p>@Html.DisplayFor(m => m.Name)</p>
                        </div>
                        <div class="single-form-item">
                            <label asp-for="DiscountRate"></label>
                            <p>@Html.DisplayFor(m => m.DiscountRate)</p>
                        </div>
                        <div class="single-form-item">
                            <label asp-for="DateStart"></label>
                            <p>@Html.DisplayFor(m => m.DateStart)</p>
                        </div>
                        <div class="single-form-item">
                            <label asp-for="DateEnd"></label>
                            @if (Model.DateEnd.HasValue)
                            {
                                <p>@Html.DisplayFor(m => m.DateEnd)</p>
                            }
                            else
                            {
                                <p>-</p>
                            }
                        </div>
                        <div class="single-form-item">
                            <label asp-for="DateCreated"></label>
                            <p>@Html.DisplayFor(m => m.DateCreated)</p>
                        </div>
                        <div class="single-form-item">
                            <label asp-for="DateLastModified"></label>
                            <p>@Html.DisplayFor(m => m.DateLastModified)</p>
                        </div>
                        <div class="d-flex flex-wrap justify-content-between align-items-center flex-column-reverse flex-sm-row mt-5">
                            <a asp-area="Admin" asp-controller="Sales" asp-action="Index" class="btn align-self-stretch m-2"><span class="icon icon-arrow-left icon-top-adjust mr-3" aria-hidden="true"></span>Back to List</a>
                        </div>
                    </div>
                    <div class="col-lg-6 d-none d-lg-block">
                        <div class="d-flex justify-content-center align-items-center h-100">
                            <span class="icon icon-tag7  icon-land-lg txt-hover-bg" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
