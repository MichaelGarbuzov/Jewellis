@model Jewellis.Areas.Admin.ViewModels.Stores.EditVM

@{
    ViewData["Title"] = $"Edit Store #{Model.Id}";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="maxw-2xl m-auto">
            <ul class="breadcrumb p-0 mb-5">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="primary-link"><u>Admin</u></a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Stores" asp-action="Index" class="primary-link"><u>Stores</u></a></li>
                <li class="breadcrumb-item">Edit Store #@Model.Id</li>
            </ul>
            <h1 class="title-1 font-weight-bold mb-5">Edit Store #@Model.Id</h1>
            <div class="form-container bg-white mb-5">
                <div class="row">
                    <div class="col-lg-6">
                        <form asp-area="Admin" asp-controller="Stores" asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CurrentName" />
                            <div class="single-form-item">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="i-txt bg-input-txt" autocomplete="off" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="single-form-item">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" class="i-txt bg-input-txt" autocomplete="off" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="single-form-item">
                                <label asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" class="i-txt bg-input-txt" autocomplete="off" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="single-form-item">
                                <label asp-for="OpeningHours"></label>
                                <textarea asp-for="OpeningHours" class="i-txt bg-input-txt" cols="30" rows="3"></textarea>
                                <span asp-validation-for="OpeningHours" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="single-form-item">
                                        <label asp-for="LocationLatitude"></label>
                                        <input asp-for="LocationLatitude" class="i-txt bg-input-txt" autocomplete="off" />
                                        <span asp-validation-for="LocationLatitude" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="single-form-item">
                                        <label asp-for="LocationLongitude"></label>
                                        <input asp-for="LocationLongitude" class="i-txt bg-input-txt" autocomplete="off" />
                                        <span asp-validation-for="LocationLongitude" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="d-flex flex-wrap justify-content-between align-items-center flex-column-reverse flex-sm-row mt-3">
                                <a asp-area="Admin" asp-controller="Stores" asp-action="Index" class="btn align-self-stretch m-2"><span class="icon icon-arrow-left icon-top-adjust mr-3" aria-hidden="true"></span>Back to List</a>
                                <button type="submit" class="btn btn-primary align-self-stretch px-5 m-2" data-submit-loader>Save Changes<span class="icon icon-arrow-right1 icon-top-adjust ml-3" aria-hidden="true"></span></button>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-6 d-none d-lg-block">
                        <div class="d-flex justify-content-center align-items-center h-100">
                            <span class="icon icon-home icon-land-lg txt-hover-bg" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
