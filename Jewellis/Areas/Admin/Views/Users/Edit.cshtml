@using Jewellis.Models.Helpers

@model Jewellis.Areas.Admin.ViewModels.Users.EditVM

@{
    ViewData["Title"] = $"Edit User #{Model.Id}";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="maxw-2xl m-auto">
            <ul class="breadcrumb p-0 mb-5">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="primary-link"><u>Admin</u></a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Users" asp-action="Index" class="primary-link"><u>Users</u></a></li>
                <li class="breadcrumb-item">Edit User #@Model.Id</li>
            </ul>
            <h1 class="title-1 font-weight-bold mb-5">Edit User #@Model.Id</h1>
            <div class="form-container bg-white mb-5">
                <div class="row">
                    <div class="col-lg-6">
                        <form asp-area="Admin" asp-controller="Users" asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CurrentEmail" />
                            <div class="single-form-item">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="i-txt bg-input-txt" autocomplete="off" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="single-form-item">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="i-txt bg-input-txt" autocomplete="off" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="single-form-item">
                                <label asp-for="EmailAddress"></label>
                                <input asp-for="EmailAddress" class="i-txt bg-input-txt" autocomplete="off" />
                                <span asp-validation-for="EmailAddress" class="text-danger"></span>
                            </div>
                            <div class="single-form-item">
                                <label asp-for="Role"></label>
                                <select asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()" class="i-txt bg-input-txt"></select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="d-flex flex-wrap justify-content-between align-items-center flex-column-reverse flex-sm-row mt-3">
                                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn align-self-stretch m-2"><span class="icon icon-arrow-left icon-top-adjust mr-3" aria-hidden="true"></span>Back to List</a>
                                <button type="submit" class="btn btn-primary align-self-stretch px-5 m-2" data-submit-loader>Save Changes<span class="icon icon-arrow-right1 icon-top-adjust ml-3" aria-hidden="true"></span></button>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-6 d-none d-lg-block">
                        <div class="d-flex justify-content-center align-items-center h-100">
                            <span class="icon icon-user5 icon-land-lg txt-hover-bg" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
