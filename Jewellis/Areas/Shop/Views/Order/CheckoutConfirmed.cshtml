@{
    ViewData["Title"] = "Order Confirmed";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="container py-6-desktop">
            <div class="row">
                <div class="col-md-3">
                    <div class="text-center mb-5">
                        <span class="icon icon-checkmark2 icon-land" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="col-md-9 pl-md-5">
                    <h1 class="title-1 font-weight-bold mb-5 text-center text-md-left">Order Confirmed</h1>
                    <p class="paragraph-1 mb-5">
                        Thank you, Israel. Your order is confirmed.
                        <br />
                        Your order hasn't shipped yet but we are working on it, you can check the <a asp-area="Account" asp-controller="Home" asp-action="Order" asp-route-id="123" class="primary-link"><u>status of your order</u></a> anytime.
                    </p>
                    <a asp-area="Account" asp-controller="Home" asp-action="Orders" class="btn btn-primary mb-3">Go to My Orders<span class="icon icon-arrow-right4 icon-top-adjust ml-3" aria-hidden="true"></span></a>
                </div>
            </div>
        </div>
    </div>
</section>
