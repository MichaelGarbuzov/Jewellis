@{
    ViewData["Title"] = "Sign Up";
}

<section class="bg-light-3">
    <div class="sec-container">
        <div class="container py-5-desktop">
            <h3 class="txt-accent text-uppercase text-center mb-5">Sign Up</h3>
            <div class="form-container maxw-md bg-light-2">
                <form action="" method="post">
                    <partial name="~/Views/Account/_RegisterFormPartial.cshtml" view-data='@new ViewDataDictionary(ViewData) { { "IncludeSubmitAction", true } }' />
                </form>
                <hr class="sec-separator my-5" />
                <p class="text-center m-0">Already have an account? <a asp-area="" asp-controller="Account" asp-action="Login">Login</a></p>
            </div>
        </div>
    </div>
</section>
