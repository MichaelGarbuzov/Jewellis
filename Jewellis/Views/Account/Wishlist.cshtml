@using Jewellis.Controllers

@{
    ViewData["Title"] = "Wishlist";
}

<section class="bg-light-2">
    <div class="sec-container">
        <div class="maxw-2xl m-auto py-5-desktop">
            <h1 class="title-1 font-weight-bold mb-5">Your Account</h1>
            <div class="row">
                <div class="col-xl-3 col-lg-6 col-md-7 col-sm-8 pr-xl-5">
                    <partial name="~/Views/Account/_AccountMenuPartial.cshtml" model="nameof(AccountController.Wishlist)" />
                </div>
                <div class="col-xl-9 mb-5">
                    <h3 class="block-title">Wishlist</h3>
                    <div class="form-container bg-white txt-md">
                        <div class="table-header text-center d-none d-md-block">
                            <div class="row">
                                <div class="col-md-5">Item</div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col-md-3">Price</div>
                                        <div class="col-md-7">Buy</div>
                                        <div class="col-md-2"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="table-body">
                            <div class="table-row">
                                <div class="d-flex align-items-center text-left text-md-center row">
                                    <div class="col-12 col-md-5">
                                        <button type="button" class="txt-lg float-right d-md-none mt-3 ml-3 wishlist-heart"><span class="icon icon-heart6" aria-hidden="true"></span></button>
                                        <div class="d-flex align-items-center">
                                            <a asp-area="" asp-controller="Product" asp-action="Read" asp-route-id="1">
                                                <img class="row-image" src="~/images/product-1.jpg" alt="Product 1" />
                                            </a>
                                            <div class="row-title text-left">
                                                <a asp-area="" asp-controller="Product" asp-action="Read" asp-route-id="1" class="primary-link text-uppercase">SPRITE YOGA COMPANION</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-4 mt-md-0 col-12 col-md-7">
                                        <div class="row align-items-center">
                                            <div class="col-md-3">
                                                <div class="d-flex justify-content-md-center justify-content-between">
                                                    <div class="d-md-none txt-secondary">Price</div>
                                                    <div class="text-right text-md-center">
                                                        <strike>$65.00</strike>
                                                        <br class="d-none d-md-block" />
                                                        <span class="txt-accent ml-2 ml-md-0">$35.00</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-7">
                                                <div class="d-flex justify-content-md-center justify-content-between align-items-center mt-3 mt-md-0">
                                                    <div class="d-md-none txt-secondary">Buy</div>
                                                    <div class="d-flex flex-column flex-sm-row">
                                                        <div data-in-num data-in-num-min="1" data-in-num-max="10" class="d-flex justify-content-center align-items-center">
                                                            <button type="button" class="primary-link p-3 mr-1" data-in-num-dec>-</button>
                                                            <input type="text" class="i-txt text-center maxw-6 p-0 py-md-3 m-0" value="1">
                                                            <button type="button" class="primary-link py-3 pl-3 pr-md-3 ml-1" data-in-num-inc>+</button>
                                                        </div>
                                                        <button type="button" class="btn btn-sm outline-primary ml-3">Add to Cart</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-none d-md-block text-center col-2">
                                                <button type="button" class="wishlist-heart"><span class="icon icon-heart6" aria-hidden="true"></span></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="d-flex align-items-center text-left text-md-center row">
                                    <div class="col-12 col-md-5">
                                        <button type="button" class="txt-lg float-right d-md-none mt-3 ml-3 wishlist-heart"><span class="icon icon-heart6" aria-hidden="true"></span></button>
                                        <div class="d-flex align-items-center">
                                            <a asp-area="" asp-controller="Product" asp-action="Read" asp-route-id="2">
                                                <img class="row-image" src="~/images/product-2.jpg" alt="Product 2" />
                                            </a>
                                            <div class="row-title text-left">
                                                <a asp-area="" asp-controller="Product" asp-action="Read" asp-route-id="2" class="primary-link text-uppercase">Yoga COMPANION KIT</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-4 mt-md-0 col-12 col-md-7">
                                        <div class="row align-items-center">
                                            <div class="col-md-3">
                                                <div class="d-flex justify-content-md-center justify-content-between">
                                                    <div class="d-md-none txt-secondary">Price</div>
                                                    <div class="text-right text-md-center">$55.00</div>
                                                </div>
                                            </div>
                                            <div class="col-md-7">
                                                <div class="d-flex justify-content-md-center justify-content-between align-items-center mt-3 mt-md-0">
                                                    <div class="d-md-none txt-secondary">Buy</div>
                                                    <div class="d-flex flex-column flex-sm-row">
                                                        <div data-in-num data-in-num-min="1" data-in-num-max="10" class="d-flex justify-content-center align-items-center">
                                                            <button type="button" class="primary-link p-3 mr-1" data-in-num-dec>-</button>
                                                            <input type="text" class="i-txt text-center maxw-6 p-0 py-md-3 m-0" value="1">
                                                            <button type="button" class="primary-link py-3 pl-3 pr-md-3 ml-1" data-in-num-inc>+</button>
                                                        </div>
                                                        <button type="button" class="btn btn-sm outline-primary ml-3">Add to Cart</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-none d-md-block text-center col-2">
                                                <button type="button" class="wishlist-heart"><span class="icon icon-heart6" aria-hidden="true"></span></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-row">
                                <div class="d-flex align-items-center text-left text-md-center row">
                                    <div class="col-12 col-md-5">
                                        <button type="button" class="txt-lg float-right d-md-none mt-3 ml-3 wishlist-heart"><span class="icon icon-heart6" aria-hidden="true"></span></button>
                                        <div class="d-flex align-items-center">
                                            <a asp-area="" asp-controller="Product" asp-action="Read" asp-route-id="3">
                                                <img class="row-image" src="~/images/product-3.jpg" alt="Product 3" />
                                            </a>
                                            <div class="row-title text-left">
                                                <a asp-area="" asp-controller="Product" asp-action="Read" asp-route-id="3" class="primary-link text-uppercase">SPRITE YOGA COMPANION KIT</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-4 mt-md-0 col-12 col-md-7">
                                        <div class="row align-items-center">
                                            <div class="col-md-3">
                                                <div class="d-flex justify-content-md-center justify-content-between">
                                                    <div class="d-md-none txt-secondary">Price</div>
                                                    <div class="text-right text-md-center">$55.00</div>
                                                </div>
                                            </div>
                                            <div class="col-md-7">
                                                <div class="d-flex justify-content-md-center justify-content-between align-items-center mt-3 mt-md-0">
                                                    <div class="d-md-none txt-secondary">Buy</div>
                                                    <div class="d-flex flex-column flex-sm-row">
                                                        <div data-in-num data-in-num-min="1" data-in-num-max="10" class="d-flex justify-content-center align-items-center">
                                                            <button type="button" class="primary-link p-3 mr-1" data-in-num-dec>-</button>
                                                            <input type="text" class="i-txt text-center maxw-6 p-0 py-md-3 m-0" value="1">
                                                            <button type="button" class="primary-link py-3 pl-3 pr-md-3 ml-1" data-in-num-inc>+</button>
                                                        </div>
                                                        <button type="button" class="btn btn-sm outline-primary ml-3">Add to Cart</button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="d-none d-md-block text-center col-2">
                                                <button type="button" class="wishlist-heart"><span class="icon icon-heart6" aria-hidden="true"></span></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
