@*
    This partial view represents the menu in the side of each account page.
*@

@using Jewellis.Controllers

@model string

<h3 class="block-title">Name Here</h3>
<aside class="form-container bg-white p-0 mb-5">
    <menu>
        <ul class="side-menu">
            <li @(Model.Equals(nameof(AccountController.Orders)) ? "class=selected" : "")>
                <a asp-area="" asp-controller="Account" asp-action="Orders"><span class="icon icon-stack1" aria-hidden="true"></span>Orders</a>
            </li>
            <li @(Model.Equals(nameof(AccountController.Wishlist)) ? "class=selected" : "")>
                <a asp-area="" asp-controller="Account" asp-action="Wishlist"><span class="icon icon-heart6" aria-hidden="true"></span>Wishlist</a>
            </li>
            <li @(Model.Equals(nameof(AccountController.Profile)) ? "class=selected" : "")>
                <a asp-area="" asp-controller="Account" asp-action="Profile"><span class="icon icon-vcard" aria-hidden="true"></span>Profile</a>
            </li>
            <li @(Model.Equals(nameof(AccountController.Address)) ? "class=selected" : "")>
                <a asp-area="" asp-controller="Account" asp-action="Address"><span class="icon icon-location" aria-hidden="true"></span>Address</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Account" asp-action="Logout"><span class="icon icon-exit" aria-hidden="true"></span>Log out</a>
            </li>
        </ul>
    </menu>
</aside>