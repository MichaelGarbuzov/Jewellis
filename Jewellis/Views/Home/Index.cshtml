                                    <a asp-area="" asp-controller="Store" asp-action="Kids">For Kids</a>
                                </figcaption>
                            </figure>
                        </div>
                        <div class="col-sm-6 single-cat-item">
                            <figure>
                                <a asp-area="" asp-controller="Store" asp-action="Rings">
                                    <img src="~/images/category-rings.jpg" alt="Rings Category" />
                                </a>
                                <figcaption>
                                    <a asp-area="" asp-controller="Store" asp-action="Rings">Rings</a>
                                </figcaption>
                            </figure>
