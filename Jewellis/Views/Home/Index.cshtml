                        <div class="col-sm-6 single-cat-item">
                            <figure>
                                <a asp-area="" asp-controller="Store" asp-action="Watches">
                                    <img src="~/images/category-watches.jpg" alt="Watches Category" />
                                </a>
                                <figcaption>
                                    <a asp-area="" asp-controller="Store" asp-action="Watches">Watches</a>
                                </figcaption>
                            </figure>
                        </div>
                        <div class="col-sm-6 single-cat-item">
                            <figure>
                                <a asp-area="" asp-controller="Store" asp-action="Glasses">
                                    <img src="~/images/category-glasses.jpg" alt="Glasses Category" />
                                </a>
                                <figcaption>
                                    <a asp-area="" asp-controller="Store" asp-action="Glasses">Glasses</a>
                                </figcaption>
                            </figure>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>